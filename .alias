# Ensure -al is always used
alias ls='exa -mhF1la --icons --color always --group-directories-first --git'

# Dont use vim by mistake
alias vim='nvim'
alias vi='nvim'

# use g instead of git
alias g='git'

# copy paste functionlaity
alias c='xclip'
alias v='xclip -o'
alias cx='xclip -selection clipboard'

# use prettyping > ping
alias ping="prettyping --nolegend"

# use zoxide over cd
alias cd="z"

# add a newline before neofetch
alias neofetch="echo -e \"\n\" && neofetch"

